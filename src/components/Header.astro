---
const { siteTitle = "Divya van Mahajan" } = Astro.props;
---

<header class="site-header">
    <div class="header-top container">
        <button id="menu-toggle" class="menu-toggle" aria-label="Toggle Menu">
            <span class="hamburger"></span>
            <span class="menu-text">Menu</span>
        </button>
        <h1 class="site-title">
            <a href={import.meta.env.BASE_URL}>{siteTitle}</a>
        </h1>
        <p class="site-subtitle">
            Personal notebook about things I've learned.
        </p>
    </div>

    <nav class="main-nav" id="main-nav">
        <div class="container">
            <ul class="menu">
                <li><a href={import.meta.env.BASE_URL}>Home</a></li>
                <li>
                    <a href={import.meta.env.BASE_URL + "categories"}
                        >Categories</a
                    >
                </li>
                <li>
                    <a href={import.meta.env.BASE_URL + "series"}>Series</a>
                </li>
                <li><a href={import.meta.env.BASE_URL + "tags"}>Tags</a></li>
                <li><a href={import.meta.env.BASE_URL + "til"}>TIL</a></li>
                <li><a href={import.meta.env.BASE_URL + "about"}>About</a></li>
            </ul>
        </div>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const mainNav = document.getElementById("main-nav");

    if (menuToggle && mainNav) {
        menuToggle.addEventListener("click", () => {
            mainNav.classList.toggle("is-open");
            menuToggle.classList.toggle("is-active");
        });
    }
</script>

<style>
    .site-header {
        background: var(--color-surface);
        margin-bottom: 1rem;
    }

    .header-top {
        padding: 1rem 1rem;
    }

    .site-title {
        font-family: var(--font-title);
        font-weight: var(--weight-title);
        font-size: 2.5rem;
        margin: 0;
        line-height: 1.1;
    }

    .site-title a {
        color: #000;
        text-decoration: none;
    }

    .site-subtitle {
        color: var(--color-text-light);
        margin: 0.5rem 0 0;
        font-size: 0.9rem;
    }

    .main-nav {
        background-color: var(--color-secondary);
        color: #fff;
    }

    .menu {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }

    .menu li a {
        display: block;
        padding: 0.75rem 1.25rem;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 3px solid transparent;
        transition: all 0.2s;
    }

    .menu li a:hover {
        background-color: #333;
        border-bottom-color: var(--color-primary);
    }

    .menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        align-items: center;
        gap: 0.5rem;
        padding: 0;
        color: var(--color-text);
    }

    .hamburger {
        display: block;
        width: 20px;
        height: 2px;
        background: var(--color-text);
        position: relative;
    }

    .hamburger::before,
    .hamburger::after {
        content: "";
        position: absolute;
        width: 20px;
        height: 2px;
        background: var(--color-text);
        transition: transform 0.2s;
    }

    .hamburger::before {
        top: -6px;
    }

    .hamburger::after {
        top: 6px;
    }

    .menu-toggle.is-active .hamburger {
        background: transparent;
    }

    .menu-toggle.is-active .hamburger::before {
        transform: translateY(6px) rotate(45deg);
    }

    .menu-toggle.is-active .hamburger::after {
        transform: translateY(-6px) rotate(-45deg);
    }

    .menu-text {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    @media (max-width: 768px) {
        .site-header {
            margin-bottom: 0.5rem;
        }

        .header-top {
            padding: 0.75rem 1rem;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 1rem;
        }

        .menu-toggle {
            display: flex;
        }

        .site-title {
            font-size: 1rem; /* Matches body text size */
            font-weight: 600;
        }

        .site-subtitle {
            display: none;
        }

        .main-nav {
            display: none;
            position: absolute;
            width: 100%;
            z-index: 100;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .main-nav.is-open {
            display: block;
        }

        .menu {
            flex-direction: column;
        }

        .menu li a {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
    }
</style>
