---
interface Props {
    src: string;
    alt: string;
    size?: string;
    align?: "left" | "center" | "right";
}

const { src, alt, size = "150px", align = "center" } = Astro.props;
const marginLeft = align === "left" ? "0" : align === "right" ? "auto" : "auto";
const marginRight =
    align === "left" ? "auto" : align === "right" ? "0" : "auto";
---

<div class="profile-image">
    <img src={src} alt={alt} />
</div>

<style define:vars={{ size, marginLeft, marginRight }}>
    .profile-image {
        width: var(--size);
        height: var(--size);
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--color-border);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        margin-left: var(--marginLeft);
        margin-right: var(--marginRight);
    }

    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }
</style>
